require 'indentation-parser'

describe IndentationParser do
  it 'does a lot' do
    
    parser = IndentationParser.new do |p|
      
      p.on /blablupp/ do |parent, indentation, source, captures|
        
      end
      
      p.default do |parent, indentation, source| #else
        
      end
      
      p.else do |parent, indentation, source| #else
        
      end
      
      p.on_leaf /blabla/ do |parent, indentation, source, captures|
        
      end
      
      p.on_leaf do |parent, indentation, source|
        
      end
      
      p.as_a_child_of SomeParentNode do |parent, indentation, source|
        
      end
      
      p.as_a_child_of SomeParentNode do |parent, meta|
        
      end
      
      p.as_a_child_of [Root, First, Second, Third] do |parent, indentation, source|
        
      end
      
      p.as_a_child_of [Root, First, Second, Third] do |parent, meta|
        
      end
      
    end
    
  end
end